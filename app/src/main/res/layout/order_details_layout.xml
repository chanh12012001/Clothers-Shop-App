<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="3dp"
    android:background="@color/white"
    android:layout_marginBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_product_image"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_horizontal_item1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_product_title_details_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/font_size_large"
        android:text="Áo thun nam-Trắng-XXL"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_product_price_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="100000đ"
        android:textSize="@dimen/font_size_xlarge"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_product_image"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_product_quantity_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Qty: 1"
        android:background="@drawable/bg_outline_discount_layout"
        android:padding="5dp"
        android:textSize="@dimen/font_size_large"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/iv_product_image"
        app:layout_constraintEnd_toStartOf="@+id/iv_product_image" />

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_product_image" />

    <ImageView
        android:id="@+id/ordered_indicator_dot"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider5"
        app:srcCompat="@drawable/dafault_dot_order_details"
        tools:ignore="MissingConstraints"
        app:tint="@color/background_dot" />

    <ProgressBar
        android:id="@+id/ordered_packed_progressbar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="5dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:progress="100"
        android:progressBackgroundTint="@color/background_progress"
        android:progressTint="@color/background_progress"
        android:rotation="90"
        android:transformPivotX="0dp"
        app:layout_constraintStart_toStartOf="@+id/ordered_indicator_dot"
        app:layout_constraintTop_toTopOf="@+id/ordered_indicator_dot"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/packed_indicator_dot"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ordered_indicator_dot"
        app:srcCompat="@drawable/dafault_dot_order_details"
        app:tint="@color/background_dot"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/packed_shipping_progressbar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="5dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="17dp"
        android:progress="100"
        android:progressTint="@color/background_progress"
        android:progressBackgroundTint="@color/background_progress"
        android:rotation="90"
        android:transformPivotX="0dp"
        app:layout_constraintStart_toStartOf="@+id/packed_indicator_dot"
        app:layout_constraintTop_toTopOf="@+id/packed_indicator_dot"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/shipping_indicator_dot"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/packed_indicator_dot"
        app:srcCompat="@drawable/dafault_dot_order_details"
        app:tint="@color/background_dot"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/shipping_deliverd_progressbar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="5dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="17dp"
        android:progress="100"
        android:progressTint="@color/background_progress"
        android:rotation="90"
        android:transformPivotX="0dp"
        app:layout_constraintStart_toStartOf="@+id/shipping_indicator_dot"
        app:layout_constraintTop_toTopOf="@+id/shipping_indicator_dot"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/delivered_indicator_dot"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shipping_indicator_dot"
        app:srcCompat="@drawable/dafault_dot_order_details"
        app:tint="@color/background_dot"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_ordered_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Ordered"
        android:textSize="@dimen/font_size_medium"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/ordered_indicator_dot"
        app:layout_constraintStart_toEndOf="@+id/ordered_indicator_dot"
        app:layout_constraintTop_toTopOf="@+id/ordered_indicator_dot" />

    <TextView
        android:id="@+id/tv_ordered_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Mon, 12th Dec 2021 - 7:00 AM."
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ordered_title"
        app:layout_constraintStart_toEndOf="@+id/tv_ordered_title"
        app:layout_constraintTop_toTopOf="@+id/tv_ordered_title" />

    <TextView
        android:id="@+id/tv_ordered_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Your order has been placed."
        android:textSize="@dimen/font_size_small2"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintStart_toEndOf="@+id/ordered_indicator_dot"
        app:layout_constraintTop_toBottomOf="@+id/ordered_indicator_dot" />

    <TextView
        android:id="@+id/tv_packed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Packed"
        android:textSize="@dimen/font_size_medium"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/packed_indicator_dot"
        app:layout_constraintStart_toEndOf="@+id/packed_indicator_dot"
        app:layout_constraintTop_toTopOf="@+id/packed_indicator_dot" />

    <TextView
        android:id="@+id/tv_packed_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Mon, 12th Dec 2021 - 7:00 AM."
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintBottom_toBottomOf="@+id/tv_packed_title"
        app:layout_constraintStart_toEndOf="@+id/tv_packed_title"
        app:layout_constraintTop_toTopOf="@+id/tv_packed_title" />

    <TextView
        android:id="@+id/tv_packed_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Your order has been packed."
        android:textSize="@dimen/font_size_small2"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintStart_toEndOf="@+id/packed_indicator_dot"
        app:layout_constraintTop_toBottomOf="@+id/packed_indicator_dot" />

    <TextView
        android:id="@+id/tv_shipping_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Shipping"
        android:textSize="@dimen/font_size_medium"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/shipping_indicator_dot"
        app:layout_constraintStart_toEndOf="@+id/shipping_indicator_dot"
        app:layout_constraintTop_toTopOf="@+id/shipping_indicator_dot" />

    <TextView
        android:id="@+id/tv_shipping_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Mon, 12th Dec 2021 - 7:00 AM."
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintBottom_toBottomOf="@+id/tv_shipping_title"
        app:layout_constraintStart_toEndOf="@+id/tv_shipping_title"
        app:layout_constraintTop_toTopOf="@+id/tv_shipping_title" />

    <TextView
        android:id="@+id/tv_shipping_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Your order has been shipped."
        android:textSize="@dimen/font_size_small2"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintStart_toEndOf="@+id/shipping_indicator_dot"
        app:layout_constraintTop_toBottomOf="@+id/shipping_indicator_dot" />

    <TextView
        android:id="@+id/tv_delivered_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Delivered"
        android:textSize="@dimen/font_size_medium"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/delivered_indicator_dot"
        app:layout_constraintStart_toEndOf="@+id/delivered_indicator_dot"
        app:layout_constraintTop_toTopOf="@+id/delivered_indicator_dot" />

    <TextView
        android:id="@+id/tv_delivered_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Mon, 12th Dec 2021 - 7:00 AM."
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintBottom_toBottomOf="@+id/tv_delivered_title"
        app:layout_constraintStart_toEndOf="@+id/tv_delivered_title"
        app:layout_constraintTop_toTopOf="@+id/tv_delivered_title" />

    <TextView
        android:id="@+id/tv_delivered_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Your order has been delivered."
        android:textSize="@dimen/font_size_small2"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintStart_toEndOf="@+id/delivered_indicator_dot"
        app:layout_constraintTop_toBottomOf="@+id/delivered_indicator_dot" />

    <LinearLayout
        android:id="@+id/rate_now_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/iv_star1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            app:srcCompat="@drawable/ic_star"
            app:tint="#bebebe" />

        <ImageView
            android:id="@+id/iv_star2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            app:srcCompat="@drawable/ic_star"
            app:tint="#bebebe" />

        <ImageView
            android:id="@+id/iv_star3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            app:srcCompat="@drawable/ic_star"
            app:tint="#bebebe" />

        <ImageView
            android:id="@+id/iv_star4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            app:srcCompat="@drawable/ic_star"
            app:tint="#bebebe" />

        <ImageView
            android:id="@+id/iv_star5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            app:srcCompat="@drawable/ic_star"
            app:tint="#bebebe" />
    </LinearLayout>

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_delivered_body" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Your ratings"
        android:textStyle="bold"
        android:textSize="@dimen/font_size_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider6" />


</androidx.constraintlayout.widget.ConstraintLayout>