<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edtFirstname"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/spacing_standard_new">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/editProfileImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/spacing_xlarge">

                <ImageView
                    android:id="@+id/ProfileImage"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/spacing_standard"
                    android:layout_marginEnd="@dimen/spacing_standard"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile" />

                <ImageButton
                    android:id="@+id/btnChangeImage"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/spacing_standard"
                    android:layout_marginBottom="@dimen/spacing_standard_new"
                    android:background="@drawable/circle_white"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/ic_menu_camera"
                    android:tint="@color/black"
                    app:layout_anchor="@id/ProfileImage"
                    app:layout_anchorGravity="end|bottom" />
            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxlarge">

                <EditText
                    android:id="@+id/edtFirstName"
                    style="@style/EditTextStyle"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_standard_new"
                    android:layout_marginEnd="@dimen/spacing_control"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:hint="@string/hint_first_name"
                    android:inputType="textCapWords"
                    android:nextFocusDown="@+id/edtLastName"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/edtLastName"
                    style="@style/EditTextStyle"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_control"
                    android:layout_marginEnd="@dimen/spacing_standard_new"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:hint="@string/hint_last_name"
                    android:inputType="textCapWords"
                    android:singleLine="true" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_standard_new"
                android:layout_marginTop="@dimen/spacing_middle"
                android:layout_marginEnd="@dimen/spacing_standard_new"

                android:background="@drawable/bg_ractangle_rounded_inactive">


                <Spinner
                    android:id="@+id/spnGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_standard" />

            </RelativeLayout>

            <EditText
                android:id="@+id/edtPhoneNo"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/spacing_standard_new"
                android:layout_marginTop="@dimen/spacing_standard"
                android:layout_marginEnd="@dimen/spacing_standard_new"
                android:gravity="start"
                android:hint="Phone number"
                android:inputType="number"
                android:maxEms="12"
                android:maxLength="12" />

            <EditText
                android:id="@+id/edtEmail"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/spacing_standard_new"
                android:layout_marginTop="@dimen/spacing_standard"
                android:layout_marginEnd="@dimen/spacing_standard_new"
                android:gravity="start"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <Button
                android:id="@+id/btnSaveProFile"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_standard_new"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_standard_new"
                android:layout_marginBottom="@dimen/spacing_standard"
                android:backgroundTint="#E32020"
                android:text="Save Profile"
                android:textAlignment="center"
                android:textColor="@color/commonColorWhite"
                android:textSize="@dimen/font_size_medium"
                app:strokeColor="@color/editText_background" />

            <Button
                android:id="@+id/btnChangePassword"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_standard_new"
                android:layout_marginEnd="@dimen/spacing_standard_new"
                android:layout_marginBottom="@dimen/spacing_standard"
                android:text="Change Password"
                android:textAlignment="center"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_size_medium"
                app:strokeColor="@color/editText_background" />

            <Button
                android:id="@+id/btnDeactivate"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_standard_new"
                android:layout_marginEnd="@dimen/spacing_standard_new"
                android:layout_marginBottom="@dimen/spacing_large"
                android:backgroundTint="#000000"
                android:text="Deactivate Account"
                android:textAlignment="center"
                android:textColor="@color/commonColorWhite"
                android:textSize="@dimen/font_size_medium"
                app:strokeColor="@color/editText_background" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
