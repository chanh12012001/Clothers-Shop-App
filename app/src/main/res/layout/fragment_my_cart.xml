<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyCartFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_item_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_rating"
        android:elevation="@dimen/_8sdp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_standard_new">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_total_amount"
                android:textSize="@dimen/font_size_normal"></TextView>

            <TextView
                android:id="@+id/tv_total_cart_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100000Ä‘"
                android:textColor="@color/red_ratings"
                android:textSize="@dimen/font_size_xxlarge"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <Button
            android:id="@+id/btn_cart_continue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_6sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_buy_now"
            android:text="@string/lbl_continue"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_large"
            android:textStyle="bold"></Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>