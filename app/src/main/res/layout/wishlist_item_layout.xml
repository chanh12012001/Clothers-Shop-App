<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="4dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:elevation="3dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_product_wishlist_item"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginStart="16dp"
        android:src="@drawable/img_horizontal_item1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_product_title_wishlist_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="Áo thun Nam-Trắng-XXL"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/font_size_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_product_wishlist_item"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/iv_icon_coupon_wishlist_item"
        android:layout_width="@dimen/_13sdp"
        android:layout_height="@dimen/_13sdp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_free_coupon"
        app:layout_constraintStart_toStartOf="@+id/tv_product_title_wishlist_item"
        app:layout_constraintTop_toTopOf="@+id/tv_free_coupon_wishlist_item"
        app:srcCompat="@drawable/ic_coupon_fill"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_free_coupon_wishlist_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:text="Free 2 coupons"
        android:textColor="#673AB7"
        app:layout_constraintStart_toEndOf="@+id/iv_icon_coupon_wishlist_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_title_wishlist_item">
    </TextView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_rating"
        android:backgroundTint="@color/color_background_rating"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_7sdp"
        android:paddingTop="@dimen/_1sdp"
        android:paddingEnd="@dimen/_7sdp"
        android:paddingBottom="@dimen/_1sdp"
        app:layout_constraintStart_toEndOf="@+id/iv_product_wishlist_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_free_coupon_wishlist_item">

        <TextView
            android:id="@+id/tv_product_rating_miniview_wishlist_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_small"
            android:textStyle="bold"></TextView>

        <ImageView
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_9sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:src="@drawable/ic_star"
            app:tint="@color/white"></ImageView>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_total_rating_wishlist_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="(30 ratings)"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/tv_product_price_wishlist_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:text="100000đ"
        android:textColor="@color/red_ratings"
        android:textSize="@dimen/font_size_normal"
        app:layout_constraintStart_toEndOf="@+id/iv_product_wishlist_item"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/tv_cutted_price_wishlist_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="150000đ"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product_price_wishlist_item"
        app:layout_constraintStart_toEndOf="@+id/tv_product_price_wishlist_item"
        app:layout_constraintTop_toTopOf="@+id/tv_product_price_wishlist_item" />

    <View
        android:id="@+id/divider_cutted_price_wishlist_item"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cutted_price_wishlist_item"
        app:layout_constraintEnd_toEndOf="@+id/tv_cutted_price_wishlist_item"
        app:layout_constraintStart_toStartOf="@+id/tv_cutted_price_wishlist_item"
        app:layout_constraintTop_toTopOf="@+id/tv_cutted_price_wishlist_item"
        app:layout_constraintVertical_bias="0.611" />

    <TextView
        android:id="@+id/tv_payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="Cash on delivery available"
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_product_price_wishlist_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_price_wishlist_item" />

    <ImageView
        android:id="@+id/btn_remove_wishlist_item"
        android:layout_width="@dimen/_8sdp"
        android:layout_height="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>