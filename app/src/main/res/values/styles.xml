<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00BCD4</item>
        <item name="colorPrimaryDark">#990A0A</item>
        <item name="colorAccent">@color/black</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fede_out</item>

    </style>
    <style name="countertextappearance">
        <item name="android:textColor">#ffffff</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="mytheme" parent="AppTheme">
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_dialog_shape</item>
    </style>

    <style name="alerttheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:colorAccent">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="phoneVerificationTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/RecyclerViewBackground</item>
        <item name="colorAccent">#FA7575</item>
        <!--        <item name="android:layout_marginTop">30dp</item>-->
    </style>
    <style name="MatButton" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="alertthemeblack" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:colorAccent">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>


    <!-- Base application theme. -->
    <style name="Mattheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#dedede</item>
        <item name="colorPrimaryDark">#dedede</item>
        <item name="colorAccent">#ffffff</item>
    </style>


    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/main_activity_background</item>
    </style>

    <style name="RedProgressbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#11A10C</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="paytmTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/RecyclerViewBackground</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:background">@drawable/bg_ractangle_rounded_inactive</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

</resources>
